{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vue",
      "node",
      "vite/client",
    ],
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["*.d.ts", "src", "components", "alias"],
  "references": [
    { "path": "./tsconfig.node.json" },
  ]
}
